@model LoginViewModel
@{
    ViewData["Title"] = "FoodZeroWaste";
    var returnUrl = Context.Request.Query["ReturnUrl"];
}

<div class="zw-pink-lavender-bg w-25 p-2 rounded text-center">
    <h1>Food Zero Waste</h1>
    <p>Jedz zdrowo i ogranicz wyrzucanie jedzenia!</p>

    <h2>Logowanie</h2>
    <div class="col-md-12">
        <form method="post">
            <div class="text-danger" asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input class="form-control" asp-for="Email" />
                <span class="text-danger" asp-validation-for="Email"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password"></label>
                <input class="form-control" asp-for="Password" />
                <span class="text-danger" asp-validation-for="Password"></span>
            </div>
            <div class="form-group">
                <div class="custom-checkbox">
                    <label asp-for="Remember">
                        <input asp-for="Remember" />
                        @Html.DisplayNameFor(m => m.Remember)
                    </label>
                </div>
            </div>
            @Html.Hidden("ReturnUrl", returnUrl)
            <button type="submit" asp-controller="account" asp-action="login" class="btn btn-success">Zaloguj</button>
        </form>
    </div>

    <a class="btn btn-light" asp-route-returnurl="@returnUrl" asp-action="register" asp-controller="account">Zarejestruj sie</a>

</div>