@model List<Application.Common.Dtos.RecipieComponentDto>

@{
    ViewData.TemplateInfo.HtmlFieldPrefix = "Components";
}

@for (int i = 0; i < Model.Count; i++)
{
    <li>
        <input class="readonly-input" asp-for="@Model[i].SubTitle" readonly onfocus="this.blur()"/>
        @{
            ViewBag.ComponentId = i;
        }
        <partial name="_DisplayListIngredientsDetails" model="Model[i].Ingredients" />
    </li>
}